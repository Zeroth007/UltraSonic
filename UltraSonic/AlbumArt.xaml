<Window x:Class="UltraSonic.AlbumArt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AlbumArt"
        Width="300"
        Height="300"
        AllowsTransparency="True"
        BorderThickness="0"
        KeyDown="WindowCloseOnKeyDown"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None">
    <Grid>
        <Image x:Name="PopupAlbumArtImage"
               AllowDrop="False"
               MouseLeftButtonUp="PopupAlbumArtImageMouseLeftButtonUp" />
    </Grid>
</Window>
