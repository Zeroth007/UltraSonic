<Window x:Class="UltraSonic.SavePlaylist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Playlist"
        Width="300"
        Height="136"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Height="126"
          Margin="0,0,0,0"
          VerticalAlignment="Top">
        <TextBox x:Name="PlaylistNameTextBox"
                 Width="272"
                 Height="23"
                 Margin="10,42,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Text=""
                 TextWrapping="Wrap" />
        <Label x:Name="SavePlaylistLabel"
               Width="272"
               Height="27"
               Margin="10,10,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="" />
        <Button x:Name="OkButton"
                Width="75"
                Margin="10,70,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="OkButtonClick"
                Content="OK" />
        <Button x:Name="CancelButton"
                Width="75"
                Margin="90,70,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="CancelButtonClick"
                Content="Cancel" />
    </Grid>
</Window>
